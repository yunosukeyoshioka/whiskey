<section class="section mt-6">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <div class="card mb-6">
          <header class="card-header">
            <p class="card-header-title">
              <%= @whiskey.name %>
            </p>
            <div class="col-sm-6">
					 		<% if @whiskey.image? %>
					 			<%= image_tag @whiskey.image.to_s, size:'400x400' %>
					    <% else %>
					      <%= image_tag "no_image.jpg", size:'400x400' %>    
					    <% end %>
			  		</div>
         	</header>
          <div class="card-content">
            <div class="content average-score">
              <div class="star-rating mb-2">
                <div class="star-rating-front" style="width: %">★★★★★</div>
                <div class="star-rating-back">★★★★★</div>
              </div>
              <div class="average-score-display ml-3 pt-2">
                点（<%= @whiskey.reviews.count %>件のレビュー）
              </div>
              <div class="col-sm-6">	 
					 			<%= @whiskey.genre.genre%>
								<%= @whiskey.district.district %>
								<%= @whiskey.price %>
								<%= @whiskey.body %>
								<% if current_user = @whiskey.user %>
									<%= link_to "削除", whiskeys_path, method: :delete %>
								<% end %>	
						 	</div>
            </div>
          </div>
        </div>
        <p class="is-size-4 mb-3">レビューを書く</p>

				<div class="rating-box mt-3">
				  <%= form_with model: @review, url: whiskey_reviews_path(@whiskey), local: true do |f| %>
				    <div class="main-rating">
				      <div class="ratings mb-3">
				        <span class="fa fa-star-o" id="star"></span>
				        <span class="fa fa-star-o" id="star"></span>
				        <span class="fa fa-star-o" id="star"></span>
				        <span class="fa fa-star-o" id="star"></span>
				        <span class="fa fa-star-o" id="star"></span>
				      </div>
				      <div class="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5</div>
				    </div>
				    <%= f.hidden_field :whiskey_id, value: @whiskey.id %>
				    <%= f.hidden_field :score, id: "rating-value" %>
				    <%= f.text_field :content, class: "textarea" %>
				    <%= f.submit "保存", class: "button mt-3" %>
				    <%= link_to "他のレビューを見る", whiskey_reviews_path(@whiskey), class: "button light ml-3 mt-3" %>
				  <% end %>
				</div>
				<%= javascript_include_tag "reviews.js" %>
      </div>
    </div>
  </div>
</section>



