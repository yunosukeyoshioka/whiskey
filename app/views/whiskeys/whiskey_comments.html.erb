<div class="container">
  <div class="row">
    <div class="box col-xs-12 ">
      <table border="1">
        <thead>
          <tr>
            <th class="th">投稿日</th>
            <th class="th">コメント</th>
          </tr>
        </thead>
        <tbody>
          <% @whiskey.post_comments.each do |post_comment| %>
          <tr>
            <%#= post_comment.user.name %>    
            <td class="comment-date"><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
            <td class="comment-count"><%= post_comment.comment %></td>
          </tr>
          <% end %>  
        </tbody>
      </table> 
    </div>
  </div>
</div>  
